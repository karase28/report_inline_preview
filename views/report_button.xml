            <xpath expr="//header" position="inside">
                <button name="%(stock.action_report_delivery)d"
                        type="action"
                        class="btn-primary"
                        string="PodglÄ…d WZ"
                        context="{'url': '/report/inline/stock.report_deliveryslip/' + str(active_id)}"/>
