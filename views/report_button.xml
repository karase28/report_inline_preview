<odoo>
    <record id="view_picking_form_inherit_report_inline" model="ir.ui.view">
        <field name="name">stock.picking.form.report.inline</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <!-- Podgląd WZ (inline) -->
                <button type="object"
                        name="action_print_inline_wz"
                        string="Podgląd WZ"
                        class="btn-primary"/>
                <!-- Pobierz WZ (download) -->
                <button type="object"
                        name="action_print_download_wz"
                        string="Pobierz PDF"/>
            </xpath>
        </field>
    </record>
</odoo>